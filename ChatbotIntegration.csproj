<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <!-- Set the target framework to .NET 8.0 (adjust if needed). -->
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <!-- Wrapper around the official WhatsApp Business Cloud API. -->
    <PackageReference Include="WhatsappBusiness.CloudApi" Version="1.0.76" />
    <!-- Wrapper around the local Ollama API. -->
    <PackageReference Include="OllamaSharp" Version="5.1.14" />
    <!-- Newtonsoft JSON is used by WhatsappBusiness.CloudApi for model binding. -->
    <PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" Version="8.0.0" />
  
        <!-- Google Calendar API dependencies -->
        <PackageReference Include="Google.Apis.Calendar.v3" Version="1.69.0.3746" />
        <PackageReference Include="Google.Apis.Auth" Version="1.70.0" />
</ItemGroup>

</Project>
